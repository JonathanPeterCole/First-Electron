{
  "name": "first-electron",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "startDev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.js",
    "buildDev": "cross-env NODE_ENV=development webpack --config ./config/webpack.dev.js",
    "buildRun": "npm run buildDev && npm run startDev",
    "pack": "npm run build && build",
    "lint": "eslint . --ext .js,.jsx",
    "lintFix": "eslint . --ext .js,.jsx --fix",
    "postinstall": "electron-builder install-app-deps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "env": {
      "jest": true
    },
    "extends": [
      "standard",
      "standard-react"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "build": {
    "appId": "com.jcole.firstelectron",
    "productName": "First Electron",
    "win": {
      "target": "portable"
    }
  }
}
